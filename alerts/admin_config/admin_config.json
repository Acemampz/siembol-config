{
    "config_version": 6,
    "alerts.engine": "siembol_alerts",
    "alerts.topology.name": "siembol-alerts",
    "alerts.input.topics": [
      "siembol.indexing"
    ],
    "kafka.error.topic": "siembol.indexing",
    "alerts.output.topic": "siembol.alerts",
    "alerts.correlation.output.topic": "siembol.correlation.alerts",
    "kafka.producer.properties": {
      "bootstrap.servers": "siembol-storm-kafka-headless.siembol.svc.cluster.local:9092",
      "client.id": "siembol.alerting.writer"
    },
    "zookeeper.attributes": {
      "zk.url": "siembol-storm-zookeeper:2181",
      "zk.path": "/siembol/alerting",
      "zk.base.sleep.ms": 1000,
      "zk.max.retries": 3
    },
    "storm.attributes": {
      "bootstrap.servers": "siembol-storm-kafka-headless.siembol.svc.cluster.local:9092",
      "first.pool.offset.strategy": "UNCOMMITTED_LATEST",
      "kafka.spout.properties": {
        "group.id": "siembol.alerting.reader",
        "session.timeout.ms": 30000
      },
      "storm.config": {
        "topology.workers": 1,
        "topology.message.timeout.secs": 50,
        "max.spout.pending": 500
      }
    },
    "kafka.spout.num.executors": 1,
    "alerts.engine.bolt.num.executors": 1,
    "kafka.writer.bolt.num.executors": 1
  }